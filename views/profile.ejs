</div> <!-- /container -->

<script type="text/javascript">
	$(document).ready(function() {
		
		var ViewModel = function(first, last, email) {
			var self = this;
		    self.firstName = ko.observable(first);
		    self.lastName = ko.observable(last);
		    this.fullName = ko.computed(function() {
		        return this.firstName() + " " + this.lastName();
		    }, this);
		    self.email = ko.observable(email);
			self.streamImages = ko.observable();

			// Behaviors
			self.getImages = function(folder) {
				$.get('/activity/<%- account._id %>', self.streamImages);
			};
		};
		ko.applyBindings(new ViewModel("<%- account.first_name %>", "<%- account.last_name %>", "<%- account.email %>"));

		$(".followButton").click(function() {
			var data = {
				'email':'<%- account.email %>',
				'first_name':'<%- account.first_name %>',
				'last_name':'<%- account.last_name %>'
			};
			$.ajax({
				type: "POST",
				url: '/memberFollow',
				data: data,
				success: function(data) {
					//console.log(data);
				}
			});
			return false;
		});
		$(".unfollowButton").click(function() {
			var data = {
				'email':'<%- account.email %>'
			};
			$.ajax({
				type: "POST",
				url: '/memberUnfollow',
				data: data,
				success: function(data) {
					//console.log(data);
				}
			});
			return false;
		});
	});
</script>

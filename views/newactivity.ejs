<% layout('layout') -%>

<div class="container">

  <form class="form-signup" method="POST", enctype="multipart/form-data" action="/addActivity">
    <h2 class="form-signin-heading">Add Food</h2>
    Image: <input type='file' name='image'/>
    <select class="input-block-level" name="type" id="type" placeholder="Select a meal type">
    	<option value="snack">snack</option>
    	<option value="breakfast">breakfast</option>
    	<option value="lunch">lunch</option>
    	<option value="dinner">dinner</option>
    	<option value="drink">drink</option>
    </select>
    <input type="text" class="input-block-level" name="description" id="description" placeholder="Short description">
    <button class="btn btn-large btn-primary regButton" type="submit">Submit</button>
  </form>

</div> <!-- /container -->
